<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
    <name>MOD_PRETTYPHOTORIBBON</name>
    <creationDate>2022-08-15</creationDate>
    <author>Tom van der Laan</author>
    <authorEmail>info@tlwebdesign.nl</authorEmail>
    <authorUrl>https://tlwebdesign.nl</authorUrl>
    <copyright>TLWebdesign.nl</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>0.3.0</version>
    <description>MOD_PRETTYPHOTORIBBON_XML_DESCRIPTION</description>
    <scriptfile>script.php</scriptfile>
    <namespace path="src">TLWeb\Module\Prettyphotoribbon</namespace>
    <files>
        <filename module="mod_prettyphotoribbon">mod_prettyphotoribbon.php</filename>
        <folder>services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
    </files>
    <media folder="media" destination="mod_prettyphotoribbon">
        <filename>logo.svg</filename>
        <folder>css</folder>
        <folder>js</folder>
    </media>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="logo"
                        type="note"
                        description="MOD_PRETTYPHOTORIBBON_FIELD_LOGO_DESC"
                />
                <field
                        name="ownerinfo"
                        type="note"
                        description="MOD_PRETTYPHOTORIBBON_FIELD_OWNERINFO_DESC"
                />
                <field
                        name="info"
                        type="note"
                        description="MOD_PRETTYPHOTORIBBON_FIELD_INFO_DESC"
                />
            </fieldset>
            <fieldset name="ribbon" label="MOD_PRETTYPHOTORIBBON_FIELDSET_RIBBON">
                <fieldset name="settings" label="MOD_PRETTYPHOTORIBBON_FIELDSET_SETTINGS">
                    <field
                            name="itemsvisible"
                            type="list"
                            default="4"
                            required="true"
                            label="MOD_PRETTYPHOTORIBBON_FIELD_ITEMSVISIBLE_LABEL"
                            description="MOD_PRETTYPHOTORIBBON_FIELD_ITEMSVISIBLE_DESC"
                    >
                        <option value="1" checked="true">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                    </field>
                    <field
                            name="itemratio"
                            type="list"
                            default="4"
                            required="true"
                            label="MOD_PRETTYPHOTORIBBON_FIELD_ITEMRATIO_LABEL"
                            description="MOD_PRETTYPHOTORIBBON_FIELD_ITEMRATIO_DESC"
                    >
                        <option value="1x1" checked="true">1x1</option>
                        <option value="4x3">4x3</option>
                        <option value="16x9">16x9</option>
                        <option value="21x9">21x9</option>
                    </field>
                    <field
                            name="autoplay"
                            type="radio"
                            default="0"
                            layout="joomla.form.field.radio.switcher"
                            label="MOD_PRETTYPHOTORIBBON_FIELD_AUTOPLAY_LABEL"
                            description="MOD_PRETTYPHOTORIBBON_FIELD_AUTOPLAY_DESC"
                    >
                        <option value="1">JYES</option>
                        <option value="0">JNO</option>
                    </field>
                    <field
                            name="autoplay_interval"
                            type="number"
                            default="5000"
                            filter="integer"
                            label="MOD_PRETTYPHOTORIBBON_FIELD_AUTOPLAY_INTERVAL_LABEL"
                            description="MOD_PRETTYPHOTORIBBON_FIELD_AUTOPLAY_INTERVAL_DESC"
                            showon="autoplay:1"
                            min="1000"
                            step="500"
                    />
                </fieldset>
                <fieldset name="images" label="MOD_PRETTYPHOTORIBBON_FIELDSET_IMAGES">
                    <field
                            name="ribbonitems"
                            type="subform"
                            label="MOD_PRETTYPHOTORIBBON_FIELD_RIBBONITEMS_LABEL"
                            description="MOD_PRETTYPHOTORIBBON_FIELD_RIBBONITEMS_DESC"
                            multiple="true"
                            min="1"
                            max="30"
                    >
                        <form>
                            <field
                                    name="ribbonimage"
                                    type="media"
                                    label="MOD_PRETTYPHOTORIBBON_FIELD_RIBBONIMAGE_LABEL"
                                    description="MOD_PRETTYPHOTORIBBON_FIELD_RIBBONIMAGE_DESC"
                                    required="true"
                            />

                        </form>
                    </field>
                </fieldset>
            </fieldset>
            <fieldset name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        class="form-select"
                        validate="moduleLayout"
                />

                <field
                        name="moduleclass_sfx"
                        type="textarea"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        rows="3"
                        validate="CssIdentifier"
                />

                <field
                        name="cache"
                        type="list"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        default="1"
                        filter="integer"
                        validate="options"
                >
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                        name="cache_time"
                        type="number"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        default="900"
                        filter="integer"
                />

                <field
                        name="cachemode"
                        type="hidden"
                        default="static"
                >
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" priority="2" name="Pretty PhotoRibbon Updates">
            https://raw.githubusercontent.com/TLWebdesignNL/Pretty-PhotoRibbon/main/updates.xml
        </server>
    </updateservers>
    <changelogurl>https://raw.githubusercontent.com/TLWebdesignNL/Pretty-PhotoRibbon/main/changelog.xml</changelogurl>
</extension>
